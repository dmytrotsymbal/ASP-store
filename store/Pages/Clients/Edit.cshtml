@page
@model store.Pages.Clients.EditModel
@{
}

<br>
<h1>Edit @Model.clientInfo.name</h1>
<br />
<a class="btn btn-primary btn-sm" href="/Clients/Index">Back to List</a>
<hr />

@if (Model.errorMessage.Length > 0)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error: @Model.errorMessage</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
} 

<form method="post">
	<input type="hidden" name="id" value="@Model.clientInfo.id" />
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Name</label>
        <div class="col-sm-6">
            <input type="text" name="name" class="form-control" value="@Model.clientInfo.name" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Email</label>
        <div class="col-sm-6">
            <input type="text" name="email" class="form-control" value="@Model.clientInfo.email" />
        </div>
    </div>

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Phone</label>
        <div class="col-sm-6">
            <input type="text" name="phone" class="form-control" value="@Model.clientInfo.phone" />
        </div>
    </div>

     <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Address</label>
        <div class="col-sm-6">
            <input type="text" name="address" class="form-control" value= "@Model.clientInfo.address" />
        </div>
    </div>

    @if (Model.successMessage.Length > 0)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Error: @Model.successMessage</strong>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row mb-3">
        <div class="offset-sm-3 col-sm-6">
            <button type="submit" class="btn btn-success">Update</button>
        </div>

        <div class="offset-sm-3 col-sm-6">
            <a href="/" class="btn btn-outline-primary" role="button">Cancel</a>
        </div>
    </div>
</form>